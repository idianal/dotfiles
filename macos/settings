# Settings for macOS

# Explicitly set the dock (icon) size
defaults write com.apple.dock tilesize -int 50 && killall Dock

# Hide dock
defaults write com.apple.dock autohide -bool true && killall Dock
defaults write com.apple.dock autohide-delay -float 1000 && killall Dock
defaults write com.apple.dock no-bouncing -bool TRUE && killall Dock

# If using Vim keybindings on VS Code, enable key repeat
defaults write com.microsoft.VSCode ApplePressAndHoldEnabled -bool false

# Disable marks in the Terminal app
defaults write com.apple.Terminal AutoMarkPromptLines -bool false

# Remove last login message in the Terminal app
touch .hushlogin
